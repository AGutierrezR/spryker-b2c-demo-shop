<?xml version="1.0" encoding="utf-8"?>
<statemachine
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../../config/Zed/oms/process.xsd"
>

    <process name="PayolutionPayment01" main="true">
        <states>
            <state name="new" reserved="true"/>
            <state name="waiting for payolution payment"/>
            <state name="paid"/>
        </states>

        <transitions>
            <transition happy="true" condition="PayolutionOmsConnector/PreAuthorizationIsApproved">
                <source>new</source>
                <target>waiting for payolution payment</target>
                <event>checkout</event>
            </transition>
            <transition happy="true" condition="PayolutionOmsConnector/CaptureIsApproved">
                <source>waiting for payolution payment</source>
                <target>paid</target>
                <event>capture</event>
            </transition>
        </transitions>

        <events>
            <event name="checkout" onEnter="true" command="PayolutionOmsConnector/PreAuthorize"/>
            <event name="capture" manual="true" command="PayolutionOmsConnector/Capture"/>
        </events>
    </process>

</statemachine>
