<?xml version="1.0" encoding="utf-8"?>
<statemachine
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../../../config/Zed/oms/process.xsd"
>
    <process name="PayolutionPayment01" main="true">
        <subprocesses>
            <process>reversal</process>
            <process>re-authorization</process>
            <process>refund</process>
        </subprocesses>

        <states>
            <state name="new" reserved="true"/>
            <state name="ready for pre-authorization"/>
            <state name="ready to be shipped"/>
            <state name="shipped"/>
            <state name="payment captured"/>
            <state name="paid"/>
            <!-- Failure states -->
            <state name="payment validation failed"/>
            <state name="payment capture failed"/>
        </states>

        <transitions>
            <transition>
                <source>new</source>
                <target>ready for pre-authorization</target>
                <event>start payment</event>
            </transition>
            <!-- Pre-Authorization step -->
            <transition happy="true" condition="PayolutionOmsConnector/PreAuthorizationIsApproved">
                <source>ready for pre-authorization</source>
                <target>ready to be shipped</target>
                <event>pre-authorize</event>
            </transition>
            <transition>
                <source>ready for pre-authorization</source>
                <target>payment validation failed</target>
                <event>pre-authorize</event>
            </transition>
            <!-- Shipment step -->
            <transition>
                <source>ready to be shipped</source>
                <target>shipped</target>
                <event>ship</event>
            </transition>
            <!-- Capture step -->
            <transition happy="true" condition="PayolutionOmsConnector/CaptureIsApproved">
                <source>shipped</source>
                <target>payment captured</target>
                <event>capture payment</event>
            </transition>
            <transition>
                <source>shipped</source>
                <target>payment capture failed</target>
                <event>capture payment</event>
            </transition>
            <!-- Final step -->
            <transition>
                <source>payment captured</source>
                <target>paid</target>
                <event>payment received</event>
            </transition>
        </transitions>

        <events>
            <event name="start payment" onEnter="true"/>
            <event name="pre-authorize" manual="true" command="PayolutionOmsConnector/PreAuthorize"/>
            <event name="ship" manual="true"/>
            <event name="capture payment" manual="true" command="PayolutionOmsConnector/Capture"/>
            <event name="payment received" manual="true"/>
        </events>
    </process>
    <process name="reversal" file="SubProcesses/Reversal01.xml"/>
    <process name="re-authorization" file="SubProcesses/ReAuthorization01.xml"/>
    <process name="refund" file="SubProcesses/Refund01.xml"/>
</statemachine>
