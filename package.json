{
  "private": true,
  "name": "yves_zed",
  "version": "0.1.0",
  "description": "Gulp asset distribution for Yves & Zed",
  "author": {
    "name": "Spryker",
    "email": "info@spryker.com",
    "url": "http://spryker.com/"
  },
  "scripts": {
    "spy-run-shop-zed"  : "gulp --gulpfile config/Zed/gulpfile.js --cwd .",
    "spy-run-shop-yves" : "gulp --gulpfile config/Yves/gulpfile.js --cwd .",
    "spy-install-core"  : "cd ./vendor/spryker/ui && npm run spy-build",
    "spy-install-shop"  : "npm install && npm run spy-run-shop-zed dist && npm run spy-run-shop-yves dist",
    "spy-install"       : "npm run spy-install-core && npm run spy-install-shop"
  },
  "devDependencies": {
    "gulp"            : "~3.8",
    "gulp-concat"     : "~2.4",
    "gulp-sass"       : "~1.3",
    "gulp-jshint"     : "~1.9",
    "gulp-uglify"     : "~1.1",
    "gulp-sourcemaps" : "~1.3",
    "gulp-rename"     : "~1.2",

    "q"  : "~1.1",
    "del": "~1.1"
  }
}