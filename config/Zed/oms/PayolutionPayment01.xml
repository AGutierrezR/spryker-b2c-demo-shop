<?xml version="1.0" encoding="utf-8"?>
<statemachine
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="process.xsd"
>

    <process name="PayolutionPayment01" main="true">
        <states>
            <state name="new" reserved="true"/>
            <state name="waiting for payment"/>
        </states>

        <transitions>
            <transition happy="true">
                <source>new</source>
                <target>waiting for payment</target>
                <event>checkout</event>
            </transition>
        </transitions>

        <events>
            <event name="checkout" onEnter="true" command="PayolutionOmsConnector\PreAuthorize" />
        </events>
    </process>

</statemachine>
