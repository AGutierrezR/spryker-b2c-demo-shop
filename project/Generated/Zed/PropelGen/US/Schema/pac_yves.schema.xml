<?xml version="1.0"?>
<database name="zed"
          package="vendor/project-a/frontend-package/ProjectA/Zed/Yves/Persistence"
          defaultIdMethod="native"
          defaultPhpNamingMethod="underscore"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">

    <table name="pac_yves_kv_update"  phpName="PacYvesKvUpdate">
        <column name="id_yves_kv_update" required="true" type="INTEGER" autoIncrement="true" primaryKey="true" />
        <column name="item_type" type="VARCHAR" size="255" required="true" />
        <column name="item_event" type="VARCHAR" size="255" required="true" />
        <column name="item_id" type="VARCHAR" size="255" required="true" />
        <column name="is_active" type="BOOLEAN" required="true" />
        <column name="touched" type="TIMESTAMP" required="true" />
        <unique>
            <unique-column name="item_id"/>
            <unique-column name="item_type"/>
            <unique-column name="item_event"/>
        </unique>
        <index>
            <index-column name="touched" />
        </index>
        <index>
            <index-column name="item_id" />
        </index>
        <index>
            <index-column name="item_type" />
        </index>
        <index>
            <index-column name="item_event" />
        </index>
    </table>

    <table name="pac_yves_control"  phpName="PacYvesControl">
        <column name="id_yves_control" required="true" type="INTEGER" autoIncrement="true" primaryKey="true" />
        <column name="type" type="VARCHAR" size="128" required="true" />
        <column name="hostname" type="VARCHAR" size="128" required="true" />
        <column name="last_modified" type="TIMESTAMP" required="true" />
        <column name="number_of_documents" type="INTEGER" required="true" />
        <column name="message" type="VARCHAR" size="128" required="false" />
        <behavior name="timestampable" />
        <unique>
            <unique-column name="hostname"/>
            <unique-column name="type"/>
        </unique>
    </table>

</database>