<?xml version="1.0"?>
<database name="zed"
          package="vendor/project-a/crm-package/ProjectA/Zed/Customer/Persistence"
          tablePrefix="pac_"
          defaultIdMethod="native"
          defaultPhpNamingMethod="underscore"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">


    <table name="customer" idMethod="native"  phpName="PacCustomer">
        <column name="id_customer" required="true" type="INTEGER" autoIncrement="true" primaryKey="true" />

        <column name="fk_customer_status" required="true" type="INTEGER"/>

        <column name="email" required="true" size="255" type="VARCHAR"/>
        <column name="increment_id" required="false" size="45" type="VARCHAR"/>
        <column name="salutation" type="ENUM" valueSet="Mr, Mrs, Dr, "/>
        <column name="first_name" required="true" size="100" type="VARCHAR"/>
        <column name="last_name" required="true" size="100" type="VARCHAR"/>
        <column name="gender" type="ENUM" valueSet="Male, Female"/>
        <column name="date_of_birth" type="DATE" default="NULL"/>
        <column name="password" required="true" size="255" type="VARCHAR"/>
        <column name="restore_password_key" size="150" type="VARCHAR" default="NULL"/>
        <column name="default_billing_address" type="INTEGER" />
        <column name="default_shipping_address" type="INTEGER"/>
        <behavior name="timestampable"/>
        <unique>
            <unique-column name="email"/>
        </unique>
        <unique>
            <unique-column name="increment_id"/>
        </unique>
        <foreign-key foreignTable="customer_address" phpName="BillingAddress" refPhpName="CustomerBillingAddress">
            <reference foreign="id_customer_address" local="default_billing_address"/>
        </foreign-key>
        <foreign-key foreignTable="customer_address" phpName="ShippingAddress" refPhpName="CustomerShippingAddress">
            <reference foreign="id_customer_address" local="default_shipping_address"/>
        </foreign-key>
        <foreign-key foreignTable="customer_status" phpName="Status" refPhpName="Customer">
            <reference foreign="id_customer_status" local="fk_customer_status"/>
        </foreign-key>
        <validator column="email">
            <rule name="unique" message="This email address already exists!"/>
        </validator>
    </table>

    <table name="customer_status" idMethod="native"  phpName="PacCustomerStatus">
        <column name="id_customer_status" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="name" required="true" size="255" type="VARCHAR"/>
    </table>

    <table name="customer_address" idMethod="native"  phpName="PacCustomerAddress">
        <column name="id_customer_address" required="true" type="INTEGER" autoIncrement="true" primaryKey="true" />
        <column name="fk_customer" required="true" type="INTEGER"/>
        <column name="fk_misc_country" type="INTEGER" required="true"/>
        <column name="salutation" type="ENUM" valueSet="Mr, Mrs, Dr, "/>
        <column name="first_name" required="true" size="100" type="VARCHAR"/>
        <column name="middle_name" required="false" size="100" type="VARCHAR"/>
        <column name="last_name" required="true" size="100" type="VARCHAR"/>
        <column name="address1" required="true" size="255" type="VARCHAR"/>
        <column name="address2" size="255" type="VARCHAR"/>
        <column name="company" size="255" type="VARCHAR"/>
        <column name="city" size="255" type="VARCHAR"/>
        <column name="zip_code" size="15" type="VARCHAR"/>
        <column name="po_box" size="255" type="VARCHAR"/>
        <column name="phone" size="255" type="VARCHAR"/>
        <column name="cell_phone" size="255" type="VARCHAR"/>
        <column name="is_deleted" required="true" default="0" type="SMALLINT"/>
        <column name="comment" size="255" type="VARCHAR"/>
        <behavior name="timestampable"/>
        <column name="deleted_at" required="false" type="TIMESTAMP"/>
        <foreign-key foreignTable="customer" phpName="Customer" refPhpName="Address">
            <reference foreign="id_customer" local="fk_customer"/>
        </foreign-key>
        <foreign-key foreignTable="misc_country" phpName="Country" refPhpName="CustomerAddress">
            <reference local="fk_misc_country" foreign="id_misc_country"/>
        </foreign-key>
        <index>
            <index-column name="fk_customer"/>
        </index>
    </table>


</database>
