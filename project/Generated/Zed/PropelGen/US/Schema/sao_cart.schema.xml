<?xml version="1.0"?>
<database name="zed"
          defaultIdMethod="native"
          defaultPhpNamingMethod="underscore"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">

    <table name="sao_cart_user" idMethod="native" package="project/Sao/Zed/Cart/Persistence"  phpName="SaoCartUser">
        <column name="id_cart_user" required="true" type="INTEGER" primaryKey="true" />
        <column name="user_id" required="true" type="INTEGER" default="NULL"/>
        <foreign-key foreignTable="pac_cart_user" phpName="CartUser" refPhpName="SaoCartUser" onDelete="CASCADE">
            <reference local="id_cart_user" foreign="id_cart_user"/>
        </foreign-key>
        <index>
            <index-column name="user_id" />
        </index>
    </table>

</database>
