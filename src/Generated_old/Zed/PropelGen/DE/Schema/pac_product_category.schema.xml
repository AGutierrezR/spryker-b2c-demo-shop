<?xml version="1.0"?>
<database name="zed"
          package="vendor/spryker/zed-package/src/ProjectA/Zed/ProductCategory/Persistence/Propel"
          defaultIdMethod="native"
          defaultPhpNamingMethod="underscore"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">

    <table name="pac_product_category" idMethod="native" phpName="PacProductCategory">
        <column name="fk_product" required="true" type="INTEGER" primaryKey="true" />
        <column name="fk_category_node" required="true" type="INTEGER" primaryKey="true" />

        <foreign-key foreignTable="pac_category_node">
            <reference foreign="id_category_node" local="fk_category_node"/>
        </foreign-key>

        <foreign-key foreignTable="pac_product">
            <reference foreign="product_id" local="fk_product"/>
        </foreign-key>

    </table>
</database>
