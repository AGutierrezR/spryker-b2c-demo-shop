<?xml version="1.0"?>
<database name="zed"
          package="vendor/spryker/zed-package/src/ProjectA/Zed/Payone/Persistence/Propel"
          defaultIdMethod="native"
          defaultPhpNamingMethod="underscore"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">

    <table name="pac_payment_transaction_payone" phpName="PacPaymentTransactionPayone">
        <column name="id_payment_transaction_payone" required="true" type="INTEGER" primaryKey="true" />
        <column name="sequence_number" required="false" type="INTEGER"/>
        <column name="mode" required="false" type="VARCHAR"/>
        <column name="txaction" required="false" type="VARCHAR"/>
        <column name="txid" required="false" type="VARCHAR"/>
        <column name="clearingtype" required="false" type="VARCHAR"/>
        <column name="balance" required="false" type="VARCHAR"/>
        <column name="receivable" required="false" type="VARCHAR"/>

        <foreign-key foreignTable="pac_payment_transaction" phpName="PaymentTransaction" refPhpName="PaymentTransactionPayone">
            <reference local="id_payment_transaction_payone" foreign="id_payment_transaction"/>
        </foreign-key>

        <behavior name="timestampable" />
    </table>

</database>
