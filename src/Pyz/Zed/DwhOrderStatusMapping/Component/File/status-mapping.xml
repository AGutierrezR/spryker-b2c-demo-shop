<?xml version="1.0" encoding="UTF-8"?>
<status-mapping xmlns="http://project-a.com/dwh-order-status-mapping"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://project-a.com/dwh-order-status-mapping ../../../../../../vendor/project-a/sales-package/component/DwhOrderStatusMapping/status-mapping.xsd">

    <ignored-process>testPayment</ignored-process>

    <perspective name="Sales"
                 description="A accounting-driven categorization of orders into 'Placed', 'Booked' and 'Shipped'">
        <status-group name="Placed" description="Incoming orders that are not yet paid" color="#996600">
            <status ref="new"/>
            <status ref="waiting for authorise appointment"/>
            <status ref="init cancellation process"/>
            <status ref="init capture process"/>
            <status ref="waiting for capture appointment"/>
            <status ref="clarify capture failed"/>
            <status ref="invalid"/>
            <status ref="canceled"/>
            <status ref="waiting for payment"/>
            <status ref="manual process information mail sent"/>
            <status ref="clarify addresses"/>
            <status ref="quote call successfully repeated"/>
            <status ref="appointed"/>
            <status ref="init send order confirmation"/>
            <status ref="legacy get user information"/>
            <status ref="fetched legacy user information"/>
            <status ref="clarify legacy get user information failed"/>
        </status-group>


        <status-group name="Booked" color="#669900" description="Orders that are paid but not yet shipped">
            <status ref="clarify no pickup info received"/>
            <status ref="artwork available and waiting for export"/>
            <status ref="init handpicked process"/>
            <status ref="clarify handpicked"/>
            <status ref="cancellation no handpicking"/>
            <status ref="init artwork availability check"/>
            <status ref="set sales notification"/>
            <status ref="artist notification sent"/>
            <status ref="first artist confirmation reminder sent"/>
            <status ref="second artist confirmation reminder sent"/>
            <status ref="clarify artwork availability"/>
            <status ref="artwork not available"/>
            <status ref="artist not reachable"/>
            <status ref="artist blocked"/>
            <status ref="artwork available"/>
            <status ref="init shipment process"/>
            <status ref="waiting for manual shipping appointment order"/>
            <status ref="clarify export failed"/>
            <status ref="shipment form sent"/>
            <status ref="waiting for pickup"/>
            <status ref="pickup booked"/>
            <status ref="init cancellation with refund process"/>
            <status ref="awaiting refund"/>
            <status ref="refunded"/>
            <status ref="email sent to accounting"/>
            <status ref="captured"/>
            <status ref="init stock update"/>
            <status ref="art portal sales notification sent"/>
            <status ref="clarify send sales notification failed"/>
            <status ref="init print file check"/>
            <status ref="waiting for print file check confirmation"/>
            <status ref="clarify no print file check confirmation received"/>
            <status ref="print file check failure"/>
            <status ref="print file check success"/>
            <status ref="init printer export"/>
            <status ref="exportable"/>
            <status ref="clarify printer export failed"/>
            <status ref="exported to printer"/>
            <status ref="clarify no print shipment info received"/>
            <status ref="generating packing slip"/>
            <status ref="ready for export"/>
            <status ref="removed sale in artportal"/>
            <status ref="clarify could not remove sale in artportal"/>
            <status ref="blocking artwork in artportal"/>
        </status-group>

        <status-group name="Shipped" description="Orders that are paid and shipped, including refunds and returns"
                      color="#006699">
            <status ref="print shipped"/>
            <status ref="shipping info sent"/>
            <status ref="fulfilled"/>
            <status ref="init payout process"/>
            <status ref="closed"/>
            <status ref="picked up and waiting for delivery"/>
            <status ref="clarify no delivery info received"/>
            <status ref="not delivered"/>
            <status ref="delivered"/>
            <status ref="delivery exception"/>
            <status ref="payout process finished"/>
        </status-group>
    </perspective>

</status-mapping>
