{% define data = {
    title:  spyCmsBlockPlaceholder('title') | raw
} %}

{% block content %}
    <!-- CMS_BLOCK_PLACEHOLDER : "title" -->
    <!-- CMS_BLOCK_PLACEHOLDER : "description" -->
    <div class="container">
        <div class="cms-product-slider-title">
            <div class="">
                <h1 class="cms-product-slider-title__text">{{ data.title }}</h1>
            </div>
            <div class="cms-product-slider-title__line"></div>
            <div class="">
                <div class="grid grid--right is-hidden-sm-md">
                    <a href="{{ 'camcorders.category.link' | trans }}" class="cms-product-slider-title__link">{{ 'cms-product-group.category.link.text' | trans}}</a>
                </div>
            </div>

        </div>
    </div>
    <div class="container">
        {{ spyCmsBlockPlaceholder('description') | raw }}
    </div>
    <div class="grid grid--stretch grid--spaced-lg is-hidden-lg-xl">
        <a href="{{ 'camcorders.category.link' | trans }}" class="cms-product-slider-title__link-mobile col col--sm-12">{{ 'cms-product-group.category.link.text' | trans}}</a>
    </div>
{% endblock %}

