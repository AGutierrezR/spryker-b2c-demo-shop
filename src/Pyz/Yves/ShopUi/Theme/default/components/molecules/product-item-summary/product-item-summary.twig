{% extends model('component') %}

{% define config = {
    name: 'product-item-summary',
    tag: 'ul'
} %}

{% define data = {
    unitPrice: required,
    subtotalPrice: required,
    cartItem: required
} %}

{% block class %}{{ parent() }} list{% endblock %}

{% block body %}
    {% if data.cartItem.productOptions is not empty %}
        <li class="{{ config.name }}__item">
            {{ widget('CartItemProductOptionWidgetPlugin', data.cartItem) }}
        </li>
    {% endif %}
{% endblock %}
