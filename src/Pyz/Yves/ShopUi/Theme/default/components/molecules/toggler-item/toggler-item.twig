{% extends model('component') %}

{% define config = {
    name: 'toggler-item'
} %}

{% define data = {
    title: required,
    text: '',
    triggerClass: '',
    targetClass: ''
} %}

{% block body %}
    {% block title %}
        <h4 class="{{ config.name }}__title {{ data.triggerClass }}" data-toggle-target=".{{ data.targetClass }}">{{ data.title }}</h4>
    {% endblock %}

    {% block content %}
        <div class="{{ config.name }}__content is-hidden {{ data.targetClass }}">
            {% block contentText %}{{ data.text }}{% endblock %}
        </div>
    {% endblock %}
{% endblock %}
