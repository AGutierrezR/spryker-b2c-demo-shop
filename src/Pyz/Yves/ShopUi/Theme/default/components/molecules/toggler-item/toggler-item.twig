{% extends model('component') %}

{% define config = {
    name: 'toggler-item',
} %}

{% define data = {
    title: required,
    text: '',
    triggerClass: '',
    targetClass: '',
    isActive: false,
    isToggler: true,
    isTogglerIncluded: true,
    hiddenClass: 'is-hidden',
} %}

{% block body %}
    {% set togglerClass = data.isToggler and data.isActive ? 'active' : data.hiddenClass %}
    {% set activeClass = data.isActive ? 'active' %}
    {% set titleReadOnlyClass = not data.isToggler ? config.name ~ '__title--read-only' %}
    {% set targetAttribute = data.targetClass is not empty ? 'data-toggle-target=.' ~ data.targetClass %}

    {% block title %}
        <h4 class="title title--h6 title--uppercase text-break {{ component.renderClass(config.name ~ '__title', modifiers) }} {{ data.triggerClass }} {{ activeClass }} {{ titleReadOnlyClass }}" {{ targetAttribute }}>{{ data.title }}</h4>
    {% endblock %}

    {% block content %}
        <div class="{{ component.renderClass(config.name ~ '__content', modifiers) }} {{ data.targetClass }} {{ togglerClass }}">
            {% block contentText %}{{ data.text }}{% endblock %}
        </div>
        {% if data.isToggler and data.isTogglerIncluded %}
            {% include molecule('toggler-accordion') with {
                attributes: {
                    trigger: '.' ~ data.triggerClass,
                    'class-to-toggle': data.hiddenClass,
                },
            } only %}
        {% endif %}
    {% endblock %}
{% endblock %}
