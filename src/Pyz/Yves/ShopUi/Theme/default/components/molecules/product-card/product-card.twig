{% extends molecule('card') %}

{% define config = {
    name: 'product-card',
    tag: 'article'
} %}

{% define data = {
    name: required,
    abstractId: required,
    url: required,
    imageUrl: required,
    price: null,
    originalPrice: null
} %}

{% block body %}
    <div class="{{config.name}}__container">

        <div class="{{ config.name }}__image-wrap">
            {% block image %}
                <a
                    href="{{data.url}}"
                    class="{{ config.name }}__overlay js-product-color-group__image-{{ data.abstractId }}"
                >
                    {% include atom('thumbnail') with {
                        modifiers: ['no-margin', 'product-card'],
                        attributes: {
                            alt: data.name,
                            src: data.imageUrl,
                            title: data.name
                        }
                    } only %}
                </a>
            {% endblock %}

            {% block labels %}
                {% widget 'ProductAbstractLabelWidget' args [data.abstractId] only %}{% endwidget %}
            {% endblock %}

            {% block groups %}
                {% widget 'ProductGroupWidget' args [data.abstractId] use view('product-color-selector', 'ProductGroupWidget') only %}{% endwidget %}
            {% endblock %}
        </div>

        {% block content %}

            <a href="{{data.url}}" class="{{ config.name }}__info grid grid--justify grid--top grid--no-wrap">
                {% block name %}
                    <div class="col col--md-8 col--sm-12">
                        {{ data.name }}
                    </div>
                {% endblock %}

                {% block price %}
                    {% if can('SeePricePermissionPlugin') %}
                        <div class="col col--md-4 col--sm-12">
                            {% include molecule('money-price') with {
                                modifiers: ['align-right'],
                                data: {
                                    amount: data.price,
                                    originalAmount: data.originalPrice is empty ? null : data.originalPrice
                                }
                            } only %}
                        </div>
                    {% else %}
                        {{ 'customer.access.cannot_see_price' | trans }}
                    {% endif %}
                {% endblock %}
            </a>

            {% block rating %}
                {% widget 'DisplayProductAbstractReviewWidget' args [data.abstractId] only %}{% endwidget %}
            {% endblock %}

            {% block detail %}{% endblock %}
        {% endblock %}
    </div>
{% endblock %}
