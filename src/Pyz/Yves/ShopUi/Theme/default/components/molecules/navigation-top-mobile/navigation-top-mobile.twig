{% extends model('component') %}

{% define config = {
    name: 'navigation-top-mobile',
    tag: 'nav'
} %}

{% define data = {
    url: '/',
    searchUrl: path('search'),
    cartQuantity: app['cart.quantity']
} %}

{% block body %}
    {% set items = [
        {
            iconName: 'icon-home'
        },
        {
            iconName: 'search',
            isEmbed: true,
            isSearch: true,
        },
        {
            url: url('wishlist/overview'),
            iconName: 'wishlist'
        },
        {
            url: url('customer/overview'),
            iconName: 'user-account'
        },
        {
            iconName: 'cart',
            isEmbed: true,
            isCart: true,
        },
    ] %}
    <ul class="grid grid--middle grid--justify">
        {% for item in items %}
            {% if item.isEmbed is defined %}
                {% embed molecule('navigation-top-mobile-item') with {
                    class: 'col',
                    data: {
                        url: item.url is defined ? item.url : data.url,
                        iconName: item.iconName,
                    },
                    embed: {
                        item: item,
                        searchUrl: data.searchUrl,
                        cartQuantity: data.cartQuantity
                    }
                } only %}
                    {% block button %}
                        {% if embed.item.isSearch is defined %}
                            <form action="{{embed.searchUrl}}">
                                <button type="button" class="button button--skinless spacing spacing--inner spacing--reset js-suggest-search-show">
                                    {% include atom('icon') with {
                                        modifiers: ['big'],
                                        data: {
                                            name: data.iconName,
                                        }
                                    } only %}
                                </button>
                            </form>
                        {% endif %}
                        {% if embed.item.isCart is defined %}
                            {% include atom('cart-link') with {
                                modifiers: ['mobile'],
                                data: {
                                    cartQuantity: embed.cartQuantity,
                                },
                                attributes: {
                                    href: url('cart'),
                                }
                            } only %}
                        {% endif %}
                    {% endblock %}
                {% endembed %}
            {% else %}
                {% include molecule('navigation-top-mobile-item') with {
                    class: 'col',
                    data: {
                        url: item.url is defined ? item.url : data.url,
                        iconName: item.iconName,
                    }
                } only %}
            {% endif %}
        {% endfor %}
    </ul>
{% endblock %}
