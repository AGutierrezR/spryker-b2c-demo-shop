{% extends "@application/layout/layout.twig" %}

{% block breadcrumbItems %}
    <li><a href="/">{{ 'global.home' | trans }}</a></li>
{% endblock %}

{% block title %}
    <h3>{{ 'wishlist.title' | trans }}</h3>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="small-12 columns">
            <div class="callout">
                <ul class="no-bullet">
                    {% if wishlistOverview.products|length %}
                        {% for product in wishlistOverview.products %}
                            <li>{{ product.sku }}
                                <a href="{{ path('wishlist', {id: product.idProduct}) }}">Remove</a>
                                <a href="{{ path('wishlist', {id: product.idProduct}) }}">Move to cart</a>
                            </li>
                        {% endfor %}
                    {% else %}
                        <li>Your wishlist is empty.</li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
