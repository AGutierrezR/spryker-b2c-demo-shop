{% extends template('widget') %}

{% define data = {
    banner: banner,
} %}

{% block body %}
    {% embed molecule('banner') with {
        data: {
            imageUrl: data.banner.imageUrl,
            title: data.banner.title,
            subtitle: data.banner.subtitle,
            clickUrl: data.banner.clickUrl,
            altText: data.banner.altText,
        },
    } only %}
        {% block content %}
            {% block title %}
                {{ parent() }}
            {% endblock %}

            {% block image %}
                {{ parent() }}
            {% endblock %}

            {% block subtitle %}
                {{ parent() }}
            {% endblock %}
        {% endblock %}
    {% endembed %}
{% endblock %}
