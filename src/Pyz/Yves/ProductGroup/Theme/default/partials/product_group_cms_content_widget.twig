{% if products is defined %}
    {% include "@product/product/partials/product_carousel.twig" with{
        'products' : products,
        'displayGroups' : true,
    } %}
{% endif %}

{% if product is defined and product.available %}

    {% include "@catalog/catalog/partials/product-without-groups.twig" with {
        idProductAbstract: product.idProductAbstract,
        detailsUrl: product.url,
        name: product.name,
        priceValue: product.price,
        product: product,
        imageUrl: (product.imageSets|length ? product.imageSets.default[0].externalUrlSmall : ''),
        originalPrice: (product.prices.ORIGINAL is defined ? product.prices.ORIGINAL : null)
    } %}

{% endif %}

