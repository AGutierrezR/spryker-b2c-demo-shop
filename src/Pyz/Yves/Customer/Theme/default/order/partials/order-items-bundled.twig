<tr>
    <td class="text-left">
        {{ orderItem.bundleProduct.sku }}
    </td>
    <td class="text-left">
        {{ orderItem.bundleProduct.name }}
    </td>
    <td class="text-right">
        {{ orderItem.bundleProduct.unitItemTotal | money }}
    </td>
    <td class="text-right">
        {{ orderItem.bundleProduct.quantity }}
    </td>
    <td class="text-right">
        {{ orderItem.bundleProduct.sumItemTotal | money }}
    </td>
</tr>

<tr style="background-color:unset;">
    <td colspan="5">
        {{ "customer.order.bundled_items" | trans }} <br />
        {% for bundledItem in orderItem.bundleItems %}
            - {{ bundledItem.quantity }} x {{ bundledItem.name }} <br />
        {% endfor %}
    </td>
</tr>
