
    <h3 class="caption">{{ 'customer.password'|trans }}</h3>
    <div class="actions">
        <a href="javascript:app.customer.toggleActiveForm('password-form');">{{ 'customer.change'|trans }}</a></div>
    <div id="password-form" style="display:none;">
        {% if changePasswordForm is defined %}
            {{ form_start(changePasswordForm, {attr: {class: 'changePassword', novalidate: 'novalidate' }} ) }}
            {{ form_errors(changePasswordForm) }}
            {{ form_row(changePasswordForm.password, {label: 'customer.password', attr: {'class': 'fullWidth', 'data-validation-message': 'customer.password.wrong'|trans}}) }}
            {{ form_row(changePasswordForm.new_password.first, {label: 'customer.password.new', attr: {'class': 'fullWidth', pattern: '^.{6,30}$', maxlength: 30, 'data-validation-message': 'customer.password.poor'|trans}}) }}
            {{ form_row(changePasswordForm.new_password.second, {label: 'customer.password.confirm', attr: {'class': 'fullWidth', pattern: '^.{6,30}$', maxlength: 30, 'data-validation-message': 'customer.password.poor'|trans}}) }}
            <button class="ok" type="submit">{{ 'customer.change.submit'|trans }}</button>
            {{ form_end(changePasswordForm) }}
        {% endif %}
    </div>
