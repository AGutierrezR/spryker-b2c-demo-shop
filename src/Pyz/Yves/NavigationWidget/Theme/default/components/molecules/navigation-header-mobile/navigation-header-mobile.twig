{% extends model('component') %}

{% define config = {
    name: 'navigation-header-mobile',
    tag: 'ul'
} %}

{% define data = {
    nodes: []
} %}

{% block body %}
    {% for node in data.nodes %}
        {% set hasChildren = node.children | length > 0 %}

        {% include molecule('navigation-multilevel-node') with {
            class: 'menu__item ' ~ (hasChildren ? 'has' : ''),
            data: {
                node: node
            }
        } only %}
    {% endfor %}
{% endblock %}
