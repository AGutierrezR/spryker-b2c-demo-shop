<input type="radio"
       id="filter-{{filterName}}-{{id}}"
       name="filter-{{filterName}}"
       data-color="{{hex}}"
       value="{{id}}"
        {% if checked is defined and checked == true %} checked=true{% endif %}>
<label for="filter-{{filterName}}-{{id}}" class="js-color-name">{{hex}}
    <span class="filter__quantity">{{quantity}}</span>
</label>
