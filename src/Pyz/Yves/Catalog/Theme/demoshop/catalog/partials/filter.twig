{% if type == 'default' %}
  <input type="radio"
          id="filter-{{name}}-{{id}}"
          name="filter-{{id}}"
          value="{{id}}"
          {% if checked is defined and checked == true %} checked=true{% endif %}>
  <label for="filter-{{name}}-{{id}}">{{name}}
    <span class="filter__quantity">{{quantity}}</span>
  </label>
{% endif %}