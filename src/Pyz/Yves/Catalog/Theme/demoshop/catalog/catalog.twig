{% extends "@application/layout/layout.twig" %}

{% block content %}
    <div class="catalog">
        <h1 class="catalog__section-title">Wild life</h1>

        <aside class="catalog__filter js-filters">
            {{> catalog/filter-default filterName='category' }}
            {{> catalog/filter-color filterName='color' }}
            {{> catalog/filter-range filterName='price' min='0' max='200' }}
            {{> catalog/filter-multivalue filterName='extras' }}
        </aside>
        <button class="catalog__toggle-filters js-toggle-filters">
            <span class="js-show-filters">Show filters</span>
            <span class="js-hide-filters">Hide filters</span>
        </button>

        <section class="catalog__active-filters">
            <h1>Aktive filter</h1>
            <ul class="active-filter__list">
                {{> catalog/active-filter name='category' value='' }}
                {{> catalog/active-filter name='color' value='' }}
                {{> catalog/active-filter name='price' value='' }}
                {{> catalog/active-filter name='extras' value='' }}
            </ul>
        </section>

        <header class="catalog__summary">
            <div class="summary__total-count">67 figuren gefunden</div>
            <div class="summary__sorting">
                Sortieren
                <button class="sorting__button--inc">A-Z</button>
                <button class="sorting__button--dec">Z-A</button>
                <button class="sorting__button--inc">
                    <span class="sorting__label--small">€</span>
                    <span class="sorting__label--medium">€</span>
                    <span class="sorting__label--large">€</span>
                </button>
                <button class="sorting__button--dec">
                    <span class="sorting__label--large">€</span>
                    <span class="sorting__label--medium">€</span>
                    <span class="sorting__label--small">€</span>
                </button>
            </div>
        </header>

        <div class="catalog__products-holder js-products-holder">
            <section class="catalog__products js-products-current">
                {% for product in products %}
                    {#{{ dump(product) }}#}
                    {% include "@catalog/catalog/partials/product.twig" with {detailsUrl: product.url, imageUrl: product.attributes.image_url, name: product.name, price: product.valid_price} %}
                {% endfor %}
            </section>
            <div class="catalog__loading-text">Loading...</div>
        </div>

        <div class="catalog__pagination">
            <button class="pagination__button js-pagination-prev">Prev</button>
            <button class="pagination__button js-pagination-next">Next</button>
        </div>
    </div>
{% endblock %}
