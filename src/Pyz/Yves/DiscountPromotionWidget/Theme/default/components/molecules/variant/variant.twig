{% extends model('component') %}

{% define config = {
    name: 'variant'
} %}

{% define data = {
    name: required,
    formName: required,
    values: required,
    selectedValue: null,
    label: '',
    isAvailable: true
} %}

{% block body %}
    <span>{{ data.label }}:</span>
    {% if data.selectedValue is null %}
        {% if data.isAvailable %}
            {% embed atom('select') with {
                attributes: {
                    name: data.formName,
                    onchange: 'this.form.submit()'
                },
                embed: {
                    values: data.values,
                    name: config.name
                },
                modifiers: ['borderless']
            } only %}
                {% block options %}
                    <option>{{ 'cart.select.default_value' | trans }}</option>
                    {% for value in embed.values %}
                        <option value="{{ value }}">{{ value }}</option>
                    {% endfor %}
                {% endblock %}
                {% block selectClass %}{{ config.name ~ '__' ~ embed.name }}{% endblock %}
            {% endembed %}
        {% else %}
            {{ 'product.attribute.not_available' | trans }}
        {% endif %}
    {% else %}
        <span class="{{ config.name }}__selected-value">{{ data.selectedValue }}</span>
        <a href="?">{{ 'Reset' | trans }}</a>
        <input type="hidden" name="{{ data.formName }}" value="{{ data.selectedValue }}" />
    {% endif %}
{% endblock %}
