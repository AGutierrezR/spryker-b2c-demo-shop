<div class="callout show-for-large">
    <div class="row">
        <div class="large-12 columns">
            <ul class="menu">
                {% for node in navigationTree.nodes %}
                    {% if node.navigationNode.isActive %}
                        {% if node.navigationNode.navigationNodeLocalizedAttributes[0].url %}
                            <li {% if node.children|length %}data-toggle="navigation-node-{{ node.navigationNode.idNavigationNode }}-children"{% endif %}>
                                <a href="{{ node.navigationNode.navigationNodeLocalizedAttributes[0].url }}">
                                    {{ node.navigationNode.navigationNodeLocalizedAttributes[0].title }}
                                </a>
                            </li>
                        {% elseif node.navigationNode.navigationNodeLocalizedAttributes[0].externalUrl %}
                            <li {% if node.children|length %}data-toggle="navigation-node-{{ node.navigationNode.idNavigationNode }}-children"{% endif %}>
                                <a href="{{ node.navigationNode.navigationNodeLocalizedAttributes[0].externalUrl }}" target="_blank">
                                    {{ node.navigationNode.navigationNodeLocalizedAttributes[0].title }}
                                </a>
                            </li>
                        {% else %}
                            <li class="menu-text" {% if node.children|length %}data-toggle="navigation-node-{{ node.navigationNode.idNavigationNode }}-children"{% endif %}>
                                {{ node.navigationNode.navigationNodeLocalizedAttributes[0].title }}
                            </li>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </ul>

            {% for node in navigationTree.nodes %}
                {% if node.navigationNode.isActive %}
                    {% if node.children|length %}
                        <div class="dropdown-pane" id="navigation-node-{{ node.navigationNode.idNavigationNode }}-children" data-dropdown data-hover="true" data-hover-pane="true">
                            {% include '@Application/layout/navigation/_partials/nodes.twig' with {nodes: node.children} %}
                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
