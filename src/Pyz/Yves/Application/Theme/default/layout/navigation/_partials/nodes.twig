<ul class="vertical menu {% if nested|default(false) %}nested{% endif %}">
    {% for node in nodes %}
        {%  if node.navigationNode.isActive %}
            <li id="navigation-node-{{ node.navigationNode.idNavigationNode }}" data-id-navigation-node="{{ node.navigationNode.idNavigationNode }}">
                {% if node.navigationNode.navigationNodeLocalizedAttributes[0].url %}
                    <a href="{{ node.navigationNode.navigationNodeLocalizedAttributes[0].url }}">{{ node.navigationNode.navigationNodeLocalizedAttributes[0].title }}</a>
                {% elseif node.navigationNode.navigationNodeLocalizedAttributes[0].externalUrl %}
                    <a href="{{ node.navigationNode.navigationNodeLocalizedAttributes[0].externalUrl }}" target="_blank">{{ node.navigationNode.navigationNodeLocalizedAttributes[0].title }}</a>
                {% else %}
                    {{ node.navigationNode.navigationNodeLocalizedAttributes[0].title }}
                {% endif %}

                {% if node.children|length %}
                    {% include '@Application/layout/navigation/_partials/nodes.twig' with {nodes: node.children, nested:true} %}
                {% endif %}
            </li>
        {% endif %}
    {% endfor %}
</ul>
