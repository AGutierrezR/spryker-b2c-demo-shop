<div class="callout">
    <div class="row">
        <div class="large-8 columns show-for-large">
            <ul class="menu">
                {% for category in categories %}
                    <li><a href="{{ category.url }}">{{ category.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="large-4 columns show-for-large">
            <ul class="menu align-right">
                {#{% if cart.items|length > 0 %}#}
                    {#<li><span class="warning badge float-left">{{cart.items|length}}</span></li>#}
                {#{% endif %}#}
                <li><a href="{{ url('cart') }}"><i class="fa fa-shopping-cart"></i>Cart</a></li>
                {% include '@application/layout/partials/customer-navigation.twig' %}
            </ul>
        </div>

        <div class="small-12 columns hide-for-large">
            {% include '@application/layout/partials/search-form.twig' %}
        </div>
    </div>
</div>
