{% block breadcrumbs %}{% endblock %}

{% block content %}
    <div class="spacing-bottom spacing-bottom--inner spacing-bottom--biggest">
        <p class="text-center text-big spacing-bottom spacing-bottom--biggest">{{ 'error_page.text' | trans }}</p>
