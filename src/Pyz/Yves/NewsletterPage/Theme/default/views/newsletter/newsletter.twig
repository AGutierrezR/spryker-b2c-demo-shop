{% extends template('page-layout-customer', 'CustomerPage') %}

{% define data = {
    form: _view.form,
    
    title: 'customer.account.newsletter' | trans,
    activePage: 'newsletter'
} %}

{% block customerContent %}
    <div class="box">
        {% include molecule('title-box', 'CustomerPage') with {
            class: 'grid grid--justify grid--middle',
            data: {
                title: 'customer.newsletter.subscription' | trans,
                titleClass: 'title title--account-secondary col'
            }
        } only %}

        <p>{{ 'account.newsletter.text' | trans }}</p>

    </div>
    <div class="box">
        {% include molecule('customer-form', 'CustomerPage') with {
            data: {
                form: data.form,
                submit: {
                    enable: true
                }
            }
        } only %}
    </div>
{% endblock %}
