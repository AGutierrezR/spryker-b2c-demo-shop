{% extends template('widget') %}

{% define data = {
    idProductAbstract: _widget.idProductAbstract | default,
    items: _widget.productGroupItems | default([])
} %}

{% block body %}
    {% include molecule('color-selector', 'ProductGroupWidget') with {
        class: 'text-center',
        modifiers: ['card'],
        data: {
            items: data.items
        },
        attributes: {
            'target-image-selector': '.js-product-color-group__image-' ~ data.idProductAbstract
        }
    } only %}
{% endblock %}
