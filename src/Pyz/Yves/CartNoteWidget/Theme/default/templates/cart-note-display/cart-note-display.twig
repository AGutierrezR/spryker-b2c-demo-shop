{% extends template('widget') %}

{% define data = {
    label: '',
    note: null
} %}

{% block body %}
    {% if data.note is not empty %}
        <div class="cart-note">
            <ul>
                <li><small>{{ data.label | trans }}:</small></li>
                <li>{{ data.note | escape | nl2br }}</li>
            </ul>
        </div>
    {% endif %}
{% endblock %}
