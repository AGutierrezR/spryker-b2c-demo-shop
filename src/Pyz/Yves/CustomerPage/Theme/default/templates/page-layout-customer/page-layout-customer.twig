{% extends template('page-layout-main') %}

{% define data = {
    activePage: 'overview'
} %}

{% block breadcrumbs %}{% endblock %}

{% block title %}
    <h1 class="customer-account__title">{{data.title}}</h1>
{% endblock %}

{% block content %}
    <div class="grid page-layout-customer customer-account">
        <div class="col col--sm-12 col--md-12 col--lg-3">
            {% block customerNavigation %}
                {{ widgetGlobal('CustomerNavigationWidgetPlugin', data.activePage) }}
            {% endblock %}
        </div>

        <div class="col col--sm-12 col--md-12 col--lg-9 customer-account__info">
            {% block customerContent %}{% endblock %}
        </div>
    </div>
{% endblock %}
