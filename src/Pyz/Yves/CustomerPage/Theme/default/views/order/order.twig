{% extends template('page-layout-customer', 'CustomerPage') %}

{% define data = {
    orders: _view.orderList,

    pagination: {
        parameters: {},
        currentPage: _view.pagination.page,
        paginationPath: 'customer/order',
        maxPage: _view.pagination.lastPage,
        showAlwaysFirstAndLast: true
    },

    title: 'customer.account.order_history' | trans,
    activePage: 'order'
} %}

{% block customerContent %}
    <div class="box">
        {% include molecule('title-box', 'CustomerPage') with {
            class: 'grid grid--justify grid--middle',
            data: {
                title: 'customer.order.all_orders' | trans,
                titleClass: 'title title--account-secondary col'
            }
        } only %}

        {% include molecule('order-table', 'CustomerPage') with {
            data: {
                orders: data.orders
            }
        } only %}

        <hr>

        {% include molecule('pagination') with {
            data: data.pagination
        } only %}
    </div>
{% endblock %}
