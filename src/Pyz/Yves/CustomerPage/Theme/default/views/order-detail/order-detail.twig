{% extends template('page-layout-customer', 'CustomerPage') %}

{% define data = {
    order: _view.order,
    orderItems: _view.items,

    title: 'customer.account.order_history' | trans,
    activePage: 'order'
} %}

{% block customerContent %}
    {{ widgetBlock('CustomerReorderWidgetPlugin', 'formStart', data.order) }}

    <div class="box">
        <div class="page-layout-customer__box grid grid--justify grid--middle box">
            <h5 class="title title--account-secondary col">{{ 'customer.profile.order_details' | trans }}</h5>
        </div>

        <div class="grid grid--justify">
            <ul class="col menu menu--customer-account">
                <li class="menu__item">
                    {{ 'customer.order.order_id' | trans }}:
                    <strong>{{ _view.order.orderReference }}</strong>
                </li>

                <li class="menu__item">
                    {{ 'customer.order.date' | trans }}:
                    <strong>{{ _view.order.createdAt | formatDateTime }}</strong>
                </li>

            </ul>

            <a href="{{url('customer/order')}}" class="button button--white col">{{ 'general.back.button' | trans }}</a>
        </div>
    </div>


    <div class="box">
        {% embed molecule('order-detail-table', 'CustomerPage') with {
            data: {
                items: data.orderItems,
                currencyIsoCode: data.order.currencyIsoCode
            },
            embed: {
                order: data.order
            }
        } only %}
            {% block headerRow %}
                <td></td>
                {{parent()}}
            {% endblock %}

            {% block bundleDetailRow %}
                <td></td>
                {{parent()}}
            {% endblock %}

            {% block detailRow %}
                <td></td>
                {{parent()}}
            {% endblock %}

            {% block row %}
                <td>
                    {{ widgetBlock('CustomerReorderWidgetPlugin', 'formCheckbox', embed.order, concreteItem) }}
                </td>
                {{parent()}}
            {% endblock %}
        {% endembed %}

        <div class="page-layout-customer__box">
            {% include molecule('order-summary', 'CustomerPage') with {
                class: 'menu menu--customer-account menu--order-summary text-right',
                data: {
                    order: data.order
                }
            } only %}
        </div>
    </div>

    <div class="grid grid--justify">
        <div class="col--lg-6 col--sm-12">
            <div class="box">
                <div class="page-layout-customer__box">
                    <h5 class="title title--account-secondary">{{ 'customer.order.shipping_address' | trans }}</h5>
                </div>

                {% include molecule('display-address', 'CustomerPage') with {
                    class: 'menu menu--customer-account',
                    data: {
                        address: data.order.shippingAddress
                    }
                } only %}
            </div>
        </div>

        <div class="col--lg-6 col--sm-12">
            <div class="box">
                <div class="page-layout-customer__box">
                    <h5 class="title title--account-secondary">{{ 'customer.order.billing_address' | trans }}</h5>
                </div>

                {% include molecule('display-address', 'CustomerPage') with {
                    class: 'menu menu--customer-account',
                    data: {
                        address: data.order.billingAddress
                    }
                } only %}
            </div>
        </div>
    </div>

    <div class="grid grid--justify">
        <div class="col--lg-6 col--sm-12">
            <div class="box">
                <div class="page-layout-customer__box">
                    <h5 class="title title--account-secondary">{{ 'customer.order.shipment' | trans }}</h5>
                </div>

                <ul class="menu menu--customer-account">
                    {% for expense in data.order.expenses %}
                        <li class="menu__item">{{ expense.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>


    {{ widget('CartNoteOrderNoteWidgetPlugin', data.order) }}
    {{ widgetBlock('CustomerReorderWidgetPlugin', 'formActions', data.order) }}
    {{ widgetBlock('CustomerReorderWidgetPlugin', 'formEnd', data.order) }}
{% endblock %}
