{% extends "@application/layout/layout.twig" %}

{% block content %}
    <h1>Summary</h1>
    <br />
    <br />
    <br />
    <br />
    <table style="margin:5px; width: 100%;">
    {% for item in quoteTransfer.items %}
        <tr>
            <td>{{ item.name }} x {{ item.quantity }}</td>
            <td>{{ item.sumGrossPriceWithProductOptions|price }}</td>
        </tr>
    {% endfor %}
    </table>
     <br /> <br />
    <table style="float:right; margin-right:100px;">
        <tr>
            <td style="width:100px; display:block;">Subtotal:</td>
            <td>{{ quoteTransfer.totals.subtotal|price }}</td>
        </tr>
        <tr>
            <td>Discount:</td>
            <td>
                {% if quoteTransfer.totals.discount %}
                   - {{ quoteTransfer.totals.discount.totalAmount|price }}
                {% endif %}
            </td>
        </tr>
        <tr>
            <td>Vouchers:</td>
            <td>
                {% for voucherDiscount in quoteTransfer.voucherDiscounts %}
                    <div>{{ voucherDiscount.displayName }} ({{ voucherDiscount.amount|price }})</div>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <td>Cart rules:</td>
            <td>
                {% for ruleDiscount in quoteTransfer.cartRuleDiscounts %}
                    <div>{{ ruleDiscount.displayName }} - ({{ ruleDiscount.amount|price }})</div>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <td>Shipment:</td>
            <td>{{ quoteTransfer.shipmentMethod.price|price }} - {{ quoteTransfer.shipmentMethod.name }}</td>
        </tr>
        <tr>
            <td>GrandTotal:</td>
            <td>{{ quoteTransfer.totals.grandtotal|price }}</td>
        </tr>
        <tr>
            <td>TaxAmount:</td>
            <td>{{ quoteTransfer.totals.taxTotal.amount|price }}</td>
        </tr>
    </table>
    <div style="clear:both;"></div>
    <a href="{{ previousStepUrl }}">Back</a>
{% endblock %}
