{% extends "@application/layout/layout.twig" %}
{% import "@checkout/checkout/_macros.twig" as checkout %}

{% block content %}
<div class="container">
    <div class="row cms-page">
        <div class="col-xs-12 col-md-12">
            <h1>{{ 'checkout.step.shipment.title' | trans }}</h1>
        </div>

        <div class="col-xs-12 col-md-12 col-lg-12">
            {{ form_start(shipmentForm, { 'attr': { 'class': 'form-horizontal checkout-form checkout-shipment' }}) }}
		        {{ form_widget(shipmentForm.shipmentSelection) }}
		        {{ checkout.include_subforms(shipmentForm) }}
		    {{ form_end(shipmentForm) }}
            <a href="{{ previousStepUrl }}">Back</a>
        </div>
    </div>
</div>
{% endblock %}
