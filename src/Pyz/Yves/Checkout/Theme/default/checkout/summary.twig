{% extends "@checkout/layout.twig" %}

{% block title %}
    <h3>{{ 'checkout.step.summary.title' | trans }}</h3>
{% endblock %}

{% block content %}
    <div class="row xlarge-unstack">
        <div class="small-12 xlarge-3 columns">
            <div class="row">
                <div class="small-12 medium-6 xlarge-12 columns">
                    <div class="callout">
                        <h5>Payment</h5>
                        <ul class="no-bullet">
                            <li>
                                <span class="__secondary">{{ 'With' | trans }}</span> {{ quoteTransfer.payment.paymentMethod }}
                            </li>
                            {% if quoteTransfer.payment.summaryPartialPath %}
                                <li>
                                    {% include '@' ~ quoteTransfer.payment.summaryPartialPath ~ '.twig' with {'quoteTransfer': quoteTransfer} %}
                                </li>
                            {% endif %}
                            <li>
                                <small>
                                    <strong>{{ quoteTransfer.billingAddress.salutation }} {{ quoteTransfer.billingAddress.firstName }} {{ quoteTransfer.billingAddress.lastName }}</strong><br/>
                                    {% if quoteTransfer.billingAddress.company != '' %}
                                        {{ quoteTransfer.billingAddress.company }}<br />
                                    {% endif %}
                                    {{ quoteTransfer.billingAddress.address1 }} {{ quoteTransfer.billingAddress.address2 }},
                                    {{ quoteTransfer.billingAddress.zipCode }} {{ quoteTransfer.billingAddress.city }}<br/>
                                    {% if quoteTransfer.billingAddress.phone != '' %}
                                        {{ quoteTransfer.billingAddress.phone }}<br />
                                    {% endif %}
                                </small>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="small-12 medium-6 xlarge-12 columns">
                    <div class="callout">
                        <h5>Shipping</h5>
                        <ul class="no-bullet">
                            <li><span class="__secondary">{{ 'With' | trans }}</span> {{ quoteTransfer.shipment.method.name }}</li>
                            <li>
                                <small>
                                    <strong>{{ quoteTransfer.shippingAddress.salutation }} {{ quoteTransfer.shippingAddress.firstName }} {{ quoteTransfer.shippingAddress.lastName }}</strong><br/>
                                    {% if quoteTransfer.shippingAddress.company != '' %}
                                        {{ quoteTransfer.shippingAddress.company }}<br />
                                    {% endif %}
                                    {{ quoteTransfer.shippingAddress.address1 }} {{ quoteTransfer.shippingAddress.address2 }},
                                    {{ quoteTransfer.shippingAddress.zipCode }} {{ quoteTransfer.shippingAddress.city }}<br/>
                                    {% if quoteTransfer.shippingAddress.phone != '' %}
                                        {{ quoteTransfer.shippingAddress.phone }}<br />
                                    {% endif %}
                                </small>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="small-12 medium-6 columns">
            <div class="callout">
                <ul class="no-bullet">
                    {% for item in quoteTransfer.items %}
                        <li>
                            {{ item.quantity }}
                            <span class="__secondary">&times;</span>
                            {{ item.name }}
                            <br>
                            <small class="__secondary">{{ 'SKU' | trans }}: {{ item.sku }} - <strong>{{ item.unitGrossPriceWithProductOptions|price }}</strong> </small>
                            <strong class="float-right">{{ item.sumGrossPriceWithProductOptions|price }}</strong>
                            {% if not loop.last %}
                                <hr>
                            {% else %}
                                <div class="clearfix"></div>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="small-12 medium-6 columns">
            <div class="callout">
                <h5 class="float-right __secondary">{{quoteTransfer.items|length }} {{ 'items' | trans }}</h5>
                <h5>{{ 'Overview' | trans }}</h5>
                <ul class="no-bullet">
                    <li>
                        {{ 'Sub total' | trans }}
                        <span class="float-right">{{ quoteTransfer.totals.subtotal | price }}</span>
                    </li>
                    <li><hr></li>
                    {% if quoteTransfer.totals.discounttotal %}
                        <li><strong>{{ 'Discounts' | trans }}</strong></li>
                        {% if quoteTransfer.voucherDiscounts|length %}
                            <li>
                                {{ 'Vouchers' | trans }}
                                {% for voucherDiscount in quoteTransfer.voucherDiscounts %}
                                    <div class="row">
                                        <div class="small-8 columns">{{ voucherDiscount.displayName }}</div>
                                        <div class="small-4 columns text-right">- {{ voucherDiscount.amount|price }}</div>
                                    </div>
                                {% endfor %}
                            </li>
                        {% endif %}
                        {% if quoteTransfer.cartRuleDiscounts|length %}
                            <li>
                                {% for ruleDiscount in quoteTransfer.cartRuleDiscounts %}
                                    <div class="row">
                                        <div class="small-8 columns">{{ ruleDiscount.displayName }}</div>
                                        <div class="small-4 columns text-right">- {{ ruleDiscount.amount|price }}</div>
                                    </div>
                                {% endfor %}
                            </li>
                        {% endif %}
                        <li><hr></li>
                    {% endif %}
                    <li><strong>{{ 'Shipping' | trans }}</strong></li>
                    <li>
                        {{ quoteTransfer.shipment.method.name }}
                        <span class="float-right">{{ quoteTransfer.shipment.method.defaultPrice|price }}</span>
                    </li>
                    <li><hr></li>
                    <li class="clearfix">
                        <h5 class="float-left">{{ 'Grand total' | trans }}</h5>
                        <h5 class="float-right"><strong>{{ quoteTransfer.totals.grandtotal|price }}</strong></h5>
                    </li>
                    <li>
                        {{ 'Tax' | trans }}
                        <span class="float-right">{{ quoteTransfer.totals.taxtotal.amount|price }}</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    {{ form_start(summaryForm, {'attr': {'class': 'row'}}) }}
        <div class="small-12 columns">
            <div class="callout">
                <div class="row align-right">
                    <div class="small-12 medium-6 large-4 xlarge-3 columns">
                        <a href="{{ previousStepUrl }}" class="button expanded __no-margin-bottom">{{ 'general.back.button' | trans }}</a>
                    </div>
                    <div class="small-12 medium-6 large-4 xlarge-3 columns">
                        <button type="submit" class="button success expanded __no-margin-bottom">{{ 'checkout.step.place.order' | trans }}</button>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(summaryForm) }}
{% endblock %}
