<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sequence>
        <label>Mail Sequences</label>
        <title>Mail Sequences</title>
        <module>mail</module>
        <controller>sequence</controller>
        <action>index</action>
        <parent_id>cms_index_index</parent_id>
        <pages>
            <create>
                <label>Create</label>
                <title>Create Sequence</title>
                <module>mail</module>
                <controller>sequence</controller>
                <action>save</action>
            </create>
            <sequence-element>
                <label>Sequence Elements</label>
                <title>Sequence Elements</title>
                <module>mail</module>
                <controller>sequence</controller>
                <action>element</action>
                <visible>0</visible>
                <pages>
                    <sequence-element-save>
                        <label>Create Sequence Element</label>
                        <title>Create Sequence Element</title>
                        <module>mail</module>
                        <controller>sequence</controller>
                        <action>save-element</action>
                        <visible>0</visible>
                    </sequence-element-save>
                </pages>
            </sequence-element>

        </pages>
    </sequence>
</config>
