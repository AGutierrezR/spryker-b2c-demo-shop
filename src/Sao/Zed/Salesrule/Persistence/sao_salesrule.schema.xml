<?xml version="1.0"?>
<database name="zed"
          defaultIdMethod="native"
          defaultPhpNamingMethod="underscore"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">

    <table name="sao_salesrule" package="src/Sao/Zed/Salesrule/Persistence"
            phpName="SaoSalesrule">

        <column name="id_salesrule" type="INTEGER" required="true" primaryKey="true"/>

        <column name="cost_distribution" required="true" type="ENUM" valueSet="Artist normal,Artist all,Artist none" default="Artist normal"/>

        <behavior name="timestampable"/>

        <foreign-key foreignTable="pac_salesrule" phpName="Salesrule" refPhpName="SaoSalesrule">
            <reference foreign="id_salesrule" local="id_salesrule"/>
        </foreign-key>


    </table>

</database>
