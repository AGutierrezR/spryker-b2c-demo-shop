<?xml version="1.0"?>
<database name="zed"
          defaultIdMethod="native"
          defaultPhpNamingMethod="underscore"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">

    <table name="sao_legacy_sales_order" package="src/Sao/Zed/Legacy/Persistence"
            phpName="SaoLegacySalesOrder">
        <column name="id_legacy_sales_order" type="INTEGER" required="true" primaryKey="true"/>

        <column name="user_id" type="INTEGER" required="false" default="NULL"/>

        <behavior name="timestampable"/>

        <foreign-key foreignTable="pac_sales_order" phpName="SalesOrder" refPhpName="SaoOrder">
            <reference foreign="id_sales_order" local="id_legacy_sales_order"/>
        </foreign-key>

    </table>

</database>
