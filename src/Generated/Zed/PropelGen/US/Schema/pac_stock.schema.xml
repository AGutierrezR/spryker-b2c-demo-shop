<?xml version="1.0"?>
<database name="zed" tablePrefix="pac_" defaultIdMethod="native"
          package="vendor/project-a/catalog-package/ProjectA/Zed/Stock/Persistence"
          defaultPhpNamingMethod="underscore" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          baseClass="ProjectA_Zed_Library_Propel_BaseObject"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">

    <table name="stock"	 phpName="PacStock">
        <column name="id_stock" type="INTEGER" required="true"
                primaryKey="true" autoIncrement="true" />
        <column name="name" type="VARCHAR" size="255" required="true" />
        <column name="is_never_out_of_stock" type="BOOLEAN" required="true"
                defaultValue="false" />
        <unique>
            <unique-column name="name" />
        </unique>
    </table>

    <table name="stock_attribute"  phpName="PacStockAttribute">
        <column name="id_stock_attribute" type="INTEGER" required="true"
                primaryKey="true" autoIncrement="true" />
        <column name="name" type="VARCHAR" size="255" required="true" />
        <unique>
            <unique-column name="name" />
        </unique>
    </table>

    <table name="stock_attribute_value"  phpName="PacStockAttributeValue">
        <column name="id_stock_attribute_value" type="INTEGER"
                required="true" primaryKey="true" autoIncrement="true" />
        <column name="value" type="VARCHAR" size="20000" required="true" />
        <column name="fk_stock_attribute" type="INTEGER" required="true" />
        <column name="fk_stock" type="INTEGER" required="true" />
        <foreign-key foreignTable="stock_attribute" phpName="Attribute"
                     refPhpName="AttributeValue">
            <reference local="fk_stock_attribute" foreign="id_stock_attribute" />
        </foreign-key>
        <foreign-key foreignTable="stock" phpName="Stock"
                     refPhpName="AttributeValue">
            <reference local="fk_stock" foreign="id_stock" />
        </foreign-key>
        <unique>
            <unique-column name="fk_stock" />
            <unique-column name="fk_stock_attribute" />
        </unique>
    </table>

    <table name="stock_product"  phpName="PacStockProduct">
        <column name="id_stock_product" type="INTEGER" required="true"
                primaryKey="true" autoIncrement="true" />
        <column name="quantity" type="INTEGER" required="true"
                defaultValue="0" />
        <column name="fk_catalog_product" type="INTEGER" required="true" />
        <column name="fk_stock" type="INTEGER" required="true" />
        <foreign-key foreignTable="catalog_product" phpName="Product"
                     refPhpName="StockProduct">
            <reference local="fk_catalog_product" foreign="id_catalog_product" />
        </foreign-key>
        <foreign-key foreignTable="stock" phpName="Stock"
                     refPhpName="StockProduct">
            <reference local="fk_stock" foreign="id_stock" />
        </foreign-key>
        <unique>
            <unique-column name="fk_stock" />
            <unique-column name="fk_catalog_product" />
        </unique>
    </table>

</database>
