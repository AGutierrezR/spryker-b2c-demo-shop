<?xml version="1.0"?>
<database name="zed"
          defaultIdMethod="native"
          defaultPhpNamingMethod="underscore"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd">

    <table name="sao_misc_region"  phpName="SaoMiscRegion" package="project/Sao/Zed/Misc/Persistence">
        <column name="id_region" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_misc_country" type="INTEGER"/>
        <column name="name" type="VARCHAR" size="50" required="true"/>
        <column name="short_name" type="VARCHAR" size="10" required="true"/>

        <foreign-key foreignTable="pac_misc_country" phpName="Country" refPhpName="Region">
            <reference local="fk_misc_country" foreign="id_misc_country"/>
        </foreign-key>
    </table>

</database>
